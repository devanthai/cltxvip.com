<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                <h3 class="font-weight-bold">Trang quản lý NẠP VÀNG
                </h3>

            </div>

        </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title mb-0">Nạp vàng</p>
                <div class="table-responsive">
                    <table class=" table table-striped table-borderless">
                        <thead>
                            <tr>
                                <th>SDT</th>
                                <th>Tên</th>
                                <th>Mã gd</th>
                                <th>Đặt</th>
                                <th>Thắng</th>
                                <th>Nội dung</th>
                                <th>Status</th>
                                <th>Sau gd</th>
                                <th>Time</th>
                            
                            </tr>
                        </thead>
                        <tbody>




                            <% if (napvang.length<=0) { %>
                                <tr class="text-center">
                                    <td colspan="8">Không có đơn</td>
                                </tr>
                                <% } %>
                                    <% for (var i=0; i < napvang.length; i++) { %>
                                        <tr>
                                            <td scope="col">
                                                <%= napvang[i].sdt %>
                                            </td>
                                            <td scope="col">
                                                <%= napvang[i].name %>
                                            </td>
                                            <td scope="col">
                                                <%= napvang[i].magd %>
                                            </td>
                                            <td scope="col">
                                                <%= String(Math.round(napvang[i].tiencuoc)).replace(/(.)(?=(\d{3})+$)/g,'$1,')%>
                                            </td>
                                            <td scope="col">
                                                <%= String(Math.round(napvang[i].tienthang)).replace(/(.)(?=(\d{3})+$)/g,'$1,')%>
                                            </td>

                                        
                                            <td scope="col">
                                                <%= napvang[i].noidung %>
                                            </td>

                                            
                                            <td scope="col">
                                                <%= napvang[i].status %>
                                            </td>
                                            <td scope="col">
                                                <%= napvang[i].sodu %>
                                            </td>
                                            <td scope="col">
                                             
                                                <%= new Date(Date.parse(napvang[i].time)).toLocaleString()%>
                                            </td>
                                            

                                           
                                        </tr>


                                        <% } %>







                        </tbody>
                    </table>

                </div>
                
                <% if (pages> 0) { %>
                    <nav aria-label="...">
                        <ul class="pagination mt-2">
                            <% if (current==1) { %>
                                <li class="page-item disabled"><a class="page-link">Đầu</a></li>
                                <% } else { %>
                                    <li><a class="page-link" href="/tsr?page=1">Đầu</a></li>
                                    <% } %>
                                        <% var i=(Number(current)> 2 ? Number(current) - 2 : 1) %>
                                            <% if (i !==1) { %>
                                                <li class="disabled"><a class="page-link">...</a></li>
                                                <% } %>
                                                    <% for (; i <=(Number(current) + 2) && i <=pages; i++) { %>
                                                        <% if (i==current) { %>
                                                            <li class="page-item active"><a class="page-link">
                                                                    <%= i %>
                                                                </a></li>
                                                            <% } else { %>
                                                                <li><a class="page-link"
                                                                        href="/tsr?page=<%= i %>">
                                                                        <%= i %>
                                                                    </a></li>
                                                                <% } %>
                                                                    <% if (i==Number(current) + 2 && i < pages) { %>
                                                                        <li class="page-item disabled"><a
                                                                                class="page-link">...</a></li>
                                                                        <% } %>
                                                                            <% } %>
                                                                                <% if (current==pages) { %>
                                                                                    <li class="page-item disabled">
                                                                                        <a
                                                                                            class="page-link">Cuối</a>
                                                                                    </li>
                                                                                    <% } else { %>
                                                                                        <li><a class="page-link"
                                                                                                href="/tsr?page=<%= pages %>">Cuối</a>
                                                                                        </li>
                                                                                        <% } %>
                        </ul>
                    </nav>
                    <% } %>
            </div>
        </div>
    </div>

</div>
