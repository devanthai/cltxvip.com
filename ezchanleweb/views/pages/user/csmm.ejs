                        <tbody>
            
                          
                            <% if (products.length<=0) { %>
                                <tr class="text-center"> <td colspan="9">Bạn chưa thực hiện giao dịch nào</td> </tr>
                                <% }  %>
                            <% for (var i = 0; i < products.length; i++) { %>
                               
                               
                                <tr>

                                    <td scope="col"> <%= new Date(Date.parse(products[i].time)).toLocaleString()%></td>
                                    <td scope="col"><%= products[i].server %></td>
                                    <td scope="col"><%= products[i].nhanvat %></td>
                                    <td scope="col"><%=  String(Math.round(products[i].vangdat)).replace(/(.)(?=(\d{3})+$)/g,'$1,') %></td>







                                    <%   if (products[i].type == 0 && (products[i].chon == 0 || products[i].chon == 1)) {%>
                                        <td scope="col">Chẵn lẻ</td>
                                        <% }else if (products[i].type == 0 && (products[i].chon == 2 || products[i].chon == 3)) {%>
                                            <td scope="col">Tài xỉu</td>
                                            <% } else if (products[i].type == 4) {%>
                                                <td scope="col">Xiên</td>
                                                <% }else {%>
                                                    <td scope="col">Đoán số</td>
                                                    <%   }%>











                                    <% if (products[i].type==0 && products[i].chon==0) { %>        
                                        <td scope="col">Chẵn</td>

                                    <% }  else if(products[i].type==0 && products[i].chon==1){ %>
                                        <td scope="col">Lẻ</td>

                                        <% }  else if(products[i].type==0 && products[i].chon==2){ %>
                                            <td scope="col">Tài</td>
                                            <% }  else if(products[i].type==0 && products[i].chon==3){ %>
                                                <td scope="col">Xỉu</td>
                                            <% }  else if(products[i].type==4 && products[i].chon==0){ %>
                                                <td scope="col">Chẵn - Tài</td>
                                            <% }  else if(products[i].type==4 && products[i].chon==1){ %>
                                                <td scope="col">Chẵn - Xỉu</td> 
                                            <% }  else if(products[i].type==4 && products[i].chon==2){ %>
                                                <td scope="col">Lẻ - Tài</td>
                                                <% }  else if(products[i].type==4 && products[i].chon==3){ %>
                                                    <td scope="col">Lẻ - Xỉu</td>
                                                <% }  else { %>
                                                    <td scope="col"><%= products[i].chon %></td>
                                                    <% } %>




                                    <% if (products[i].ketqua==-1) { %>
                                        <td scope="col"> <img id="loadding" style="margin-left: 10px;" src="images/loading.gif" alt="loading" width="auto" height="20px"></td>
                                        <% } else { %>

                                    <td scope="col"><%= products[i].ketqua %></td>
                                    <% } %>


                                    <% if (products[i].vangnhan==-1) { %>
                                        <td scope="col"> <img id="loadding" style="margin-left: 10px;" src="images/loading.gif" alt="loading" width="auto" height="20px"></td>
                                        <% } else { %>

                                            <td scope="col"><%= String(Math.round(products[i].vangnhan)).replace(/(.)(?=(\d{3})+$)/g,'$1,')  %></td>
                                    <% } %>

                                  
                                  
                                    <% if (products[i].status==-1) { %>
                                        <td scope="col">   <img id="loadding" style="margin-left: 10px;" src="images/loading.gif" alt="loading" width="auto" height="20px">  </td>
                                    <% }  else if(products[i].status==1){ %>
                                        <td scope="col">    <div class="badge badge-success text-uppercase font-weight-bold" ;="" style="padding: 5px 5px"> Đã thanh toán </div>  </td>
                                    <% } else if(products[i].status==2){ %>
                                        <td scope="col">  <div class="badge badge-danger text-uppercase font-weight-bold" ;="" style="padding: 5px 5px"> THUA </div>  </td>
                                        <% }  %>
                                   
                                
                                </tr>

                               
                            <% } %>
                         
                      </table>
                      <% if (pages > 0) { %>
                        <nav aria-label="...">
                            <ul class="pagination">
                            <% if (current == 1) { %>
                                <li class="page-item disabled"><a class="page-link">Đầu</a></li>
                            <% } else { %>
                                <li><a class="page-link" href="/user/csmm/1">Đầu</a></li>
                            <% } %>
                            <% var i = (Number(current) > 2 ? Number(current) - 2 : 1) %>
                            <% if (i !== 1) { %>
                                <li class="disabled"><a class="page-link">...</a></li>
                            <% } %>
                            <% for (; i <= (Number(current) + 2) && i <= pages; i++) { %>
                                <% if (i == current) { %>
                                    <li class="page-item active"><a class="page-link"><%= i %></a></li>
                                <% } else { %>
                                    <li><a class="page-link" href="/user/csmm/<%= i %>"><%= i %></a></li>
                                <% } %>
                                <% if (i == Number(current) + 2 && i < pages) { %>
                                    <li class="page-item disabled"><a class="page-link">...</a></li>
                                <% } %>
                            <% } %>
                            <% if (current == pages) { %>
                                <li class="page-item disabled"><a class="page-link">Cuối</a></li>
                            <% } else { %>
                                <li><a class="page-link" href="/user/csmm/<%= pages %>">Cuối</a></li>
